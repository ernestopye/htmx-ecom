@model UserCartViewModel
@{
    Layout = null;
}

<div id="cart-wrapper">
@if (Model.CartItems is not null && Model.CartItems.Any()) {
    @foreach (var item in Model.CartItems) {
    <div class="row">
        <div class="col-md-2">
            <a asp-controller="Product" asp-action="Index" asp-route-id="@item.ProductId">
                <img src="https://placehold.co/100x100" alt="..." />
            </a>
        </div>
        <div class="col-md-4">
            <h4>
                <a asp-controller="Product" asp-action="Index" asp-route-id="@item.ProductId">
                    @item.Name
                </a>
            </h4>
            <h5>@item.Price.ToString("c")</h5>
            <h5>Quantity: @item.Quantity</h5>
        </div>
        <div class="col-md-2">
            <h4>@((item.Price * item.Quantity).ToString("c"))</h4>
        </div>
        <div class="col-md-2">
            <form method="delete" hx-delete="/cart" hx-target="#cart-wrapper">
                <input type="hidden" name="cartItemId" value="@item.Id" />
                <button type="submit" class="btn btn-danger">Remove</button>
            </form>
        </div>
    </div>
    <hr />
    }
} else {
    <div>Your cart is empty.</div>
}
</div>